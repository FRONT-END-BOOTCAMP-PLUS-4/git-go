generator client {
  provider      = "prisma-client-js"
  output        = "./generated/prisma"
  binaryTargets = ["native", "windows", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Repo {
  id      Int      @id @default(autoincrement())
  name    String?
  userId  String
  memoirs Memoir[]
  user    User     @relation(fields: [userId], references: [id])

  @@map("repo")
}

model Memoir {
  id        Int         @id @default(autoincrement())
  title     String
  source    String
  sourceTitle String    @default("Commit 또는 PR 임시제목") @map("source_title")
  aiSum     String?     @map("ai_sum")
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime?   @map("updated_at")
  userId    String
  typeId    Int
  repoId    Int
  content   Json
  repo      Repo        @relation(fields: [repoId], references: [id], onDelete: Cascade)
  type      MemoirType  @relation(fields: [typeId], references: [id])
  user      User        @relation(fields: [userId], references: [id])
  tags      MemoirTag[]

  @@map("memoir")
}

model User {
  id                 String    @id @default(uuid())
  username           String
  profileUrl         String?   @map("profile_url")
  createdAt          DateTime  @default(now()) @map("created_at")
  deletedAt          DateTime? @map("deleted_at")
  githubId           String
  isDefaultOnly      Boolean   @default(true)
  daily_ai_use_count Int       @default(0)
  daily_ai_restrict_count Int  @default(30)
  memoirs            Memoir[]
  repos              Repo[]

  @@map("user")
}


model MemoirType {
  id      Int      @id @default(autoincrement())
  type    String
  memoirs Memoir[]

  @@map("memoir_type")
}

model Tag {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  memoirTags MemoirTag[]

  @@map("tag")
}

model MemoirTag {
  memoirId Int
  tagId    Int
  memoir   Memoir @relation(fields: [memoirId], references: [id], onDelete: Cascade)
  tag      Tag    @relation(fields: [tagId], references: [id])

  @@id([memoirId, tagId])
  @@map("memoir_tag")
}
