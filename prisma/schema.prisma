generator client {
  provider      = "prisma-client-js"
  output        = "./generated/prisma"
  binaryTargets = ["native", "windows", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Repo {
  id      Int      @id @default(autoincrement())
  name    String?
  userId  String
  memoirs Memoir[]
  user    User     @relation(fields: [userId], references: [id])

  @@map("repo")
}

model Memoir {
  id          Int         @id @default(autoincrement())
  title       String
  source      String
  aiSum       String?     @map("ai_sum")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime?   @map("updated_at")
  userId      String
  typeId      Int
  repoId      Int
  content     Json
  sourceTitle String      @default("Commit 또는 PR 임시제목") @map("source_title")
  repo        Repo        @relation(fields: [repoId], references: [id], onDelete: Cascade)
  type        MemoirType  @relation(fields: [typeId], references: [id])
  user        User        @relation(fields: [userId], references: [id])
  tags        MemoirTag[]

  @@map("memoir")
}

model User {
  id            String        @id @default(uuid())
  username      String
  profileUrl    String?       @map("profile_url")
  createdAt     DateTime      @default(now()) @map("created_at")
  deletedAt     DateTime?     @map("deleted_at")
  githubId      String
  isDefaultOnly Boolean       @default(true)
  loginRecords  LoginRecord[]
  memoirs       Memoir[]
  repos         Repo[]
  usage         AiUsage[]

  @@map("user")
}

model AiUsage {
  userId        String
  date          DateTime @default(now())
  usage         Int      @default(0)
  restrictUsage Int      @default(200000)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, date])
  @@map("usage")
}

model MemoirType {
  id      Int      @id @default(autoincrement())
  type    String
  memoirs Memoir[]

  @@map("memoir_type")
}

model Tag {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  memoirTags MemoirTag[]

  @@map("tag")
}

model MemoirTag {
  memoirId Int
  tagId    Int
  memoir   Memoir @relation(fields: [memoirId], references: [id], onDelete: Cascade)
  tag      Tag    @relation(fields: [tagId], references: [id])

  @@id([memoirId, tagId])
  @@map("memoir_tag")
}

model LoginRecord {
  id     Int      @id @default(autoincrement())
  userId String
  date   DateTime @map("login_date")
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("login_record")
}
